task :cpython do
    sh "time python benchmark.py"
end

task :pypy do
    sh "time pypy benchmark.py"
end


task :c do
  out = 'a.out'
  sh "cc -o #{out} benchmark.c -O2"
  sh "time ./#{out}"
  rm out
end


task :java do
  out = "Benchmark.class"
  sh "javac Benchmark.java"
  sh "time java Benchmark"
  rm out
end

task :go do
  out = "a.out"
  sh "go build -o #{out} benchmark.go"
  sh "time ./#{out}"
  rm out
end

namespace :ruby do
  task :test do
    sh "ruby test_primes.rb"
  end

  task :bench do
    sh "time ruby primes.rb"
  end
end
